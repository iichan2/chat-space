.message{data: {"message-id": "#{message.id}"}}
  .message-status
    .talker{data: {"message.user.name": "#{message.user.name}"}}
      = message.user.name
    .date{data: {"message.created_at": "#{message.created_at}"}}
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .text
    - if message.content.present?
      %p.content{data: {"message.content": "#{message.content}"}}
        = message.content
    - if message.image.present?
      %p.lower-message__image{data: {"message.image": "#{message.image}"}} 
        = image_tag message.image.url
  