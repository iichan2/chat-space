.wrapper

  = render 'shared/side_bar'

  .chat-main
    .main-header
      .group-status
        .current-group
          =@group.name
        %ul.member-list
          Memberï¼š
          - @group.users.each do |user|
            %li.member
              =user.name
      .edit
        = link_to 'EDIT' ,edit_group_path(@group.id),class: "EDITlink" 
    .messages
      = render @messages
 
    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          .input-box__image
            =f.label :image,class: "input-box__image__icon" do
              %i.far.fa-image.fa-large
              =f.file_field :image, class: 'input-box__image__file' ,type: 'file' ,name: 'massage[image]' do
                %i.far.fa-image
        =f.submit 'Send',class: 'submit-btn'

